#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant Community Add-on: nebula
# Runs nebula
# ==============================================================================
declare -a options

bashio::log.info "Starting nebula..."

# Note sure what this does.
options+=(-U)
options+=("-p$(bashio::addon.port 9993)")

# Run nebula
exec nebula "${options[@]}"
